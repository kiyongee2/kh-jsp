<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%
	int num = Integer.parseInt(request.getParameter("num"));

	String result = "";
	if(request.getParameter("num") == null){
		out.println("<script>");
		out.println("숫자를 입력해주세요");
		out.println("</script>");
	}else{
		if(num % 2 == 0){
			result = "짝수";
		}else{
			result = "홀수";
		}
	}
	
%>
<p>결과: <%=result %>